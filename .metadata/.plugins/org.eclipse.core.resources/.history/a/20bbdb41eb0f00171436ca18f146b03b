package by.htp.auto.entity;

public class Train extends Transport {
	private int wagon;
	private static int counterRailways;
	private static int trainsCounter;
	private static final int KOEFF_AMORTIZATION = 3;

	{
		wagon = 10;
	}
	{
		trainsCounter++;
	}

	public Train(int mass, int wagon) {
		super(mass);
		this.wagon = wagon;
	}

	@Override
	public double amortisate(int years) {
		double result = (totalRace() * years * KOEFF_AMORTIZATION) / PERCENTAGE;
		return result;

	}

}
