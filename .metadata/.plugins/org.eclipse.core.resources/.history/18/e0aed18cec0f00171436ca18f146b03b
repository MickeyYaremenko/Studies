package by.htp.auto.entity;

public abstract class Transport {
	private double mass;
	private static String producer;
	private double race;
	protected static final int PERCENTAGE = 100;
	{
		mass = 1.0;
	}

	static {
		producer = "Beltelecom";
	}

	public Transport() {
	}

	public Transport(double mass) {
		this.mass = mass;
	}

	public double totalRace() {
		return race;
	}

	public void move(double distance) {
		race += distance;
	}

	public abstract double amortisate(int years);

	public double getRace() {
		return race;
	}

	public void setRace(double race) {
		this.race = race;
	}

}
